<div class="title-container">
  <h1 class="text-primary mb-0"><%= @player.name %></h1>

  <% if @player.disqualified? %>
    <div class="disqualified-badge">
      <span class="text-danger fw-bold"><%= t('players.show.disqualified') %></span>
    </div>
  <% end %>
</div>

<div class="row g-3 mb-4 mb-md-5">
  <div class="player-misc col-12 col-lg-3 d-flex flex-column">
    <%= render 'players/show/mouse', player: @player %>
    <%= render 'players/show/badges', player: @player %>
  </div>

  <div class="player-stats col-12 col-lg-9">
    <%= render 'players/show/normal_stats', player: @player %>
    <%= render 'players/show/racing_stats', player: @player %>
    <%= render 'players/show/survivor_stats', player: @player %>
    <%= render 'players/show/defilante_stats', player: @player %>
  </div>
</div>

