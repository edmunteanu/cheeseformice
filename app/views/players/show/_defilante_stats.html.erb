<div class="card">
  <div class="card-body">
    <%= render ScoreHeader.new(player, title: t('players.show.categories.defilante'), type: :defilante) %>

    <div class="card-separator"></div>

    <div class="row g-3">
      <% cols = 'col-6 col-md-4' %>

      <%= render PlayerStat.new(player, stat: :defilante_finished_maps, style: cols) %>
      <%= render PlayerStat.new(player, stat: :defilante_points, style: cols) %>
      <%= render PlayerStat.new(player, stat: :defilante_rounds_played, style: cols, display_ratio: false) %>
    </div>
  </div>
</div>
