<div class="card h-100">
  <div class="card-body">
    <%= render ScoreHeader.new(player, past_day, title: t("players.show.categories.normal"), category: :normal) %>

    <div class="card-separator"></div>

    <%= render "players/show/level_progress", player: player %>

    <span class="d-block fw-bold mb-3"><%= t("players.show.shaman_attributes") %></span>
    <div class="row g-3">
      <% cols = "col-6" %>

      <% Player::SHAMAN_ATTRIBUTES.each do |attribute| %>
        <%= render PlayerStat.new(player, past_day, attribute: attribute,
                                                    style: cols,
                                                    display_ratio: attribute != :rounds_played) %>
      <% end %>
    </div>

    <div class="hr my-4"></div>

    <span class="d-block fw-bold mb-3"><%= t("players.show.mouse_attributes") %></span>
    <div class="row g-3">
      <% cols = "col-6" %>

      <% Player::MOUSE_ATTRIBUTES.each do |attribute| %>
        <%= render PlayerStat.new(player, past_day, attribute: attribute,
                                                    style: cols,
                                                    display_ratio: attribute != :rounds_played) %>
      <% end %>
    </div>
  </div>
</div>
