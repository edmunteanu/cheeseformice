<div class="card">
  <div class="card-body">
    <%= render ScoreHeader.new(player, title: t('players.show.categories.normal'), type: :normal) %>

    <div class="card-separator"></div>

    <div class="row g-3">
      <%= render PlayerStat.new(player, stat: :saved_mice, style: 'col-6 col-md-4') %>
      <%= render PlayerStat.new(player, stat: :saved_mice_hard, style: 'col-6 col-md-4') %>
      <%= render PlayerStat.new(player, stat: :saved_mice_divine, style: 'col-6 col-md-4') %>
      <%= render PlayerStat.new(player, stat: :saved_mice_without_skills, style: 'col-6 col-md-4') %>
      <%= render PlayerStat.new(player, stat: :saved_mice_hard_without_skills, style: 'col-6 col-md-4') %>
      <%= render PlayerStat.new(player, stat: :saved_mice_divine_without_skills, style: 'col-6 col-md-4') %>
      <%= render PlayerStat.new(player, stat: :shaman_cheese, style: 'col-6 col-md-4') %>
      <%= render PlayerStat.new(player, stat: :firsts, style: 'col-6 col-md-4') %>
      <%= render PlayerStat.new(player, stat: :cheese_gathered, style: 'col-6 col-md-4') %>
      <%= render PlayerStat.new(player, stat: :bootcamp, style: 'col-6 col-md-4') %>
      <%= render PlayerStat.new(player, stat: :rounds_played, style: 'col-6 col-md-4', display_ratio: false) %>
    </div>
  </div>
</div>
