<div class="card">
  <div class="card-body">
    <%= render ScoreHeader.new(player, title: t('players.show.categories.normal'), type: :normal) %>

    <div class="card-separator"></div>

    <div class="row g-3">
      <% cols = 'col-6 col-md-4' %>

      <% Player::NORMAL_ATTRIBUTES.each do |attribute| %>
        <%= render PlayerStat.new(player, attribute: attribute,
                                          style: cols,
                                          display_ratio: attribute != :rounds_played) %>
      <% end %>
    </div>
  </div>
</div>
