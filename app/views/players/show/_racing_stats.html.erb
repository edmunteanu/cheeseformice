<div class="card">
  <div class="card-body">
    <%= render ScoreHeader.new(player, title: t('players.show.categories.racing'), type: :racing) %>

    <div class="card-separator"></div>

    <div class="row g-3">
      <% cols = 'col-6 col-md-3' %>

      <%= render PlayerStat.new(player, stat: :racing_finished_maps, style: cols) %>
      <%= render PlayerStat.new(player, stat: :racing_podiums, style: cols) %>
      <%= render PlayerStat.new(player, stat: :racing_firsts, style: cols) %>
      <%= render PlayerStat.new(player, stat: :racing_rounds_played, style: cols, display_ratio: false) %>
    </div>
  </div>
</div>
