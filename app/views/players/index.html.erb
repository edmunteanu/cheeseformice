<h1 class="text-primary mb-2"><%= t("players.index.title") %></h1>

<div class="d-flex gap-3 mb-4 mb-md-5">
  <span><%= t(@category, scope: "players.show.categories") %></span>

  <div class="vr mx-2"></div>

  <span><%= t(@statistic, scope: "activerecord.attributes.player") %></span>
</div>

<div class="d-flex">
  <%= render "players/index/leaderboard_selection" %>
</div>

<div class="my-3 my-md-4">
  <%== pagy_bootstrap_nav(@pagy) %>
</div>

<div class="player-list">
  <% @players.each_with_index do |player, index| %>
    <%= render PlayerCard.new(player: player, category: @category, statistic: @statistic,
                              player_index: index, current_page: @current_page) %>
  <% end %>
</div>

<div class="mt-3 mt-md-4">
  <%== pagy_bootstrap_nav(@pagy) %>
</div>
