<div class="navbar navbar-expand-md bg-secondary">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand d-flex align-items-center gap-2" do %>
      <%= image_tag "logo.webp", alt: t("navbar.brand_alt") %>
      <span class="d-md-none text-primary soopafresh"><%= t("navbar.brand_short") %></span>
      <span class="d-none d-md-inline-block text-primary soopafresh"><%= t("navbar.brand") %></span>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
      <i class="bi bi-list"></i>
    </button>

    <div id="navbarContent" class="collapse navbar-collapse">
      <ul class="navbar-nav ms-auto mt-2 mt-md-0">
        <li class="nav-item">
          <%= link_to leaderboard_path, class: "nav-link d-flex align-items-center gap-2" do %>
            <i class="bi bi-trophy-fill"></i>
            <span><%= t("navbar.leaderboard") %></span>
          <% end %>
        </li>

        <li class="nav-item">
          <%= link_to search_players_path, class: "nav-link d-flex align-items-center gap-2" do %>
            <i class="bi bi-search"></i>
            <span><%= t("navbar.search") %></span>
          <% end %>
        </li>

        <% if user_signed_in? %>
          <% if current_user.admin? %>
            <li class="nav-item">
              <%= link_to good_job_path, target: "_blank", class: "nav-link d-flex align-items-center gap-2" do %>
                <i class="bi bi-database-fill-gear"></i>
                <span><%= t("navbar.jobs") %></span>
              <% end %>
            </li>

            <li class="nav-item">
              <%= link_to blazer_path, target: "_blank", class: "nav-link d-flex align-items-center gap-2" do %>
                <i class="bi bi-pie-chart-fill"></i>
                <span><%= t("navbar.blazer") %></span>
              <% end %>
            </li>
          <% end %>

          <li class="nav-item">
            <%= button_to destroy_user_session_path, method: :delete,
                                                     class: "nav-link d-flex align-items-center gap-2" do %>
              <i class="bi bi-box-arrow-right"></i>
              <span><%= t("navbar.logout") %></span>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
