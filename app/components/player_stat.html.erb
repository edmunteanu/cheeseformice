<div class="<%= [style, 'd-flex flex-column justify-content-between'].join(' ') %>">
  <span class="d-block fw-bold"><%= Player.human_attribute_name(stat) %></span>

  <div class="d-flex gap-1">
    <span><%= number_with_delimiter(player.public_send(stat)) %></span>

    <% if display_ratio? %>
      <span class="text-muted"><%= display_ratio(player.public_send(:"#{stat}_ratio")) %></span>
    <% end %>
  </div>

  <div class="d-flex gap-1 h-100">
    <% if display_change? %>
      <span class="text-success"><%= number_with_delimiter(previous_day_value) %></span>

      <% if display_ratio? %>
        <span class="text-success">
          <%= display_ratio(player.previous_day_change_log.public_send(:"#{stat}_ratio")) %>
        </span>
      <% end %>

      <i class="bi bi-chevron-up text-success"></i>
    <% end %>
  </div>
</div>
