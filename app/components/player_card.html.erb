<div class="card">
  <div class="card-body">
    <div class="d-flex justify-content-between gap-3">
      <div class="score-container">
        <%= link_to player_path(player),
                    class: "link-light link-offset-1 link-underline-opacity-50 link-underline-opacity-100-hover" do %>
          <h4 class="text-truncate mb-0"><%= player.name %></h4>
        <% end %>

        <div class="vr d-none d-md-block"></div>

        <div class="d-flex align-self-md-end gap-3">
          <span>
            <% if score_statistic? %>
              <%= t(category, scope: "players.index.scores",
                              score: number_with_delimiter(player.public_send(:"#{category}_score"))) %>
            <% else %>
              <%= "#{Player.human_attribute_name(statistic)}: #{number_with_delimiter(player.public_send(statistic))}" %>
            <% end %>
          </span>
        </div>
      </div>

      <div class="rank-container">
        <h4 class="mb-0"><%= "##{current_rank}" %></h4>

        <% if score_statistic? %>
          <%== displayed_rank_change %>
        <% end %>
      </div>
    </div>

    <% if score_statistic? %>
      <div class="card-separator"></div>

      <div class="row g-3">
        <% cols = "col-6 col-md-#{12 / CATEGORY_FIELDS[category].count}" %>

        <% CATEGORY_FIELDS[category].each do |attribute| %>
          <div class="<%= cols %>">
            <span class="d-block fw-bold"><%= Player.human_attribute_name(attribute) %></span>
            <span><%= number_with_delimiter(player.public_send(attribute)) %></span>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
